<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, placeholder: "Restaurant name here" %>
  <%= f.input :address, placeholder: "Restaurant address here" %>
  <%= f.input :category, placeholder: "Category here (out of 'chinese', 'italian', japanese, 'french' and 'belgian')" %>
  <%= f.input :phone_number, placeholder: "Phone number here" %>
  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>
